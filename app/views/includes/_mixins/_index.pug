			if totalPages > 1
				nav.flex.items-center.justify-center
					ul.flex.items-center.gap-2.overflow-hidden

						//- Back Button
						if currentPage > 1
							li
								a(href=`?page=${currentPage - 1}` class="flex bg-brown text-white px-3 py-4 rounded-lg text-[14px] leading-none font-medium uppercase") Back

						//- Page 1
						li
							if currentPage === 1
								span(class="flex justify-center min-w-[48px] bg-brown text-white px-3 py-4 rounded-lg text-[14px] leading-none font-medium cursor-default") 1
							else
								a(class="flex bg-white justify-center min-w-[48px] px-3 py-4 text-[14px] leading-none font-medium rounded-lg" href="?page=1") 1

						//- Page 2 (if it exists)
						if totalPages >= 2
							li
								if currentPage === 2
									span(class="flex justify-center min-w-[48px] bg-brown text-white px-3 py-4 rounded-lg text-[14px] leading-none font-medium cursor-default") 2
								else
									a(class="flex bg-white justify-center min-w-[48px] px-3 py-4 text-[14px] leading-none font-medium rounded-lg" href="?page=2") 2

						//- Logic for middle range
						- let hasLeftGap = currentPage > 3
						- let hasRightGap = currentPage < totalPages - 2

						//- Show middle range OR truncate
						if hasLeftGap && !hasRightGap
							//- Only one ellipsis before the middle pages
							li
								span.px-3.py-2.text-gray-500 ...

							- for (let i = currentPage - 1; i <= currentPage + 1 && i < totalPages; i++)
								if i > 2
									li
										if i === currentPage
											span(class="flex justify-center min-w-[48px] bg-brown text-white px-3 py-4 rounded-lg text-[14px] leading-none font-medium cursor-default") #{i}
										else
											a(class="flex bg-white justify-center min-w-[48px] px-3 py-4 text-[14px] leading-none font-medium rounded-lg" href=`?page=${i}`) #{i}

						else if !hasLeftGap && hasRightGap
							//- Middle pages, then single ellipsis
							- for (let i = 3; i <= Math.min(currentPage + 1, totalPages - 1); i++)
								li
									if i === currentPage
										span(class="flex justify-center min-w-[48px] bg-brown text-white px-3 py-4 rounded-lg text-[14px] leading-none font-medium cursor-default") #{i}
									else
										a(class="flex bg-white justify-center min-w-[48px] px-3 py-4 text-[14px] leading-none font-medium rounded-lg" href=`?page=${i}`) #{i}
							li
								span.px-3.py-2.text-gray-500 ...

						else if hasLeftGap && hasRightGap
							//- Current is somewhere in the middle — show ellipsis and center
							li
								span.px-3.py-2.text-gray-500 ...
							- for (let i = currentPage - 1; i <= currentPage + 1 && i < totalPages; i++)
								if i > 2
									li
										if i === currentPage
											span(class="flex justify-center min-w-[48px] bg-brown text-white px-3 py-4 rounded-lg text-[14px] leading-none font-medium cursor-default") #{i}
										else
											a(class="flex bg-white justify-center min-w-[48px] px-3 py-4 text-[14px] leading-none font-medium rounded-lg" href=`?page=${i}`) #{i}
							//- No second ellipsis — one is enough

						//- Last page
						if totalPages > 2
							li
								if currentPage === totalPages
									span(class="flex justify-center min-w-[48px] bg-brown text-white px-3 py-4 rounded-lg text-[14px] leading-none font-medium cursor-default") #{totalPages}
								else
									a(class="flex bg-white justify-center min-w-[48px] px-3 py-4 text-[14px] leading-none font-medium rounded-lg" href=`?page=${totalPages}`) #{totalPages}

						//- Next Button
						if currentPage < totalPages
							li
								a(href=`?page=${currentPage + 1}` class="flex bg-brown text-white px-3 py-4 rounded-lg text-[14px] leading-none font-medium uppercase") Next

mixin infoSection(data, headingText, descText, hasBg=false)
	section.section(class=`info-block ${hasBg ? 'bg-lightbrown' : ''}`)
		.container
			.row
				div(class="flex flex-col mb-10 lg:mb-20")
					+heading(headingText, "h2", "text-center")
					if descText
						+paragraph(descText, "body-large !font-light text-center mt-5 lg:mt-10")
				div(class="flex flex-col md:flex-row items-center md:items-start justify-between gap-10 lg:gap-5")
					each info in data
						div(class="flex flex-col flex-1 gap-4 text-center max-w-[297px]")
							span(class="material-symbols-outlined text-[32px] lg:text-[40px]") !{info.icon}
							+heading(info.title, "h6", "")
							+paragraph(info.disc, "body-small font-light")

mixin sidebar(data)
	aside.w-64.bg-white.p-4.space-y-6.border-t-1.border-indigo-500.mt-2
		nav.space-y-2.text-gray-700.text-sm
			each item in data
				a.block.px-4.py-2.rounded.bg-gray-200.font-semibold(href=item.link)= item.name

mixin toggle(labelText,id,isChecked)
