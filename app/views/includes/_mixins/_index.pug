mixin customSelect(title,small,optArr)
	.custom-select-simple
		select(class=`form-control ${small ? 'form-control--small' : ''}` placeholder=`${title}`)
			if(optArr)
				each list in optArr
					option #{list}
			else
				option #{title}
				option 1
				option 2
				option 3

